<?php $buttonTitle = $this->__('Add to Cart'); ?>
   <?php if(!$_product->isGrouped()): ?>
        <!--<label for="qty"><?php //echo $this->__('Qty:') ?></label>-->
           <div class="margin-l-r-0 row">
            <div class="col-md-4 pad-l-r-0">
                <p class="label-attribute">QUANTITY</p>         
            </div>
            <div class="col-md-4 pad-l-r-0">
                <div class="reduced qty-clk" onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty ) && qty > 1 ) result.value--;return false;">
                    <i class="fa fa-minus"></i>
                </div>
                <!-- value="<?php echo $this->getProductDefaultQty() * 1 ?>" -->
                <input type="text" name="qty" id="qty" maxlength="12"  value="1" title="<?php echo $this->__('Qty') ?>" class="input-text qty validate-number" disabled />
